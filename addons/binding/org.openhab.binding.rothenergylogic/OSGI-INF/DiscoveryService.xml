<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" name="org.openhab.binding.rothenergylogic.discovery" immediate="true">
    <implementation class="org.openhab.binding.rothenergylogic.discovery.DiscoveryService"/>
    <property name="webserver_ip" value="" ></property>
    <service>
        <provide interface="org.eclipse.smarthome.config.discovery.DiscoveryService"/>
        <provide interface="org.eclipse.smarthome.core.events.EventSubscriber"/>
    </service>
        
    <reference bind="addThingRegistry" cardinality="1..1" interface="org.eclipse.smarthome.core.thing.ThingRegistry" name="ThingRegistry" policy="static" unbind="removeThingRegistry" />      
    <reference bind="addBindingConfigurationManager" cardinality="1..1" interface="org.openhab.binding.rothenergylogic.internal.BindingConfigurationManager" name="BindingConfigurationManager" policy="static" unbind="removeBindingConfigurationManager" />
    <reference bind="addWebserverFacade" cardinality="1..1" interface="org.openhab.binding.rothenergylogic.internal.WebserverFacade" name="WebserverFacade" policy="static" unbind="removeWebserverFacade" /> 
    
</scr:component>
