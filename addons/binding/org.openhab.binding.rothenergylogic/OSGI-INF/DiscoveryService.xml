<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" configuration-policy="require" name="org.openhab.binding.rothenergylogic.discovery" immediate="true">
    <implementation class="org.openhab.binding.rothenergylogic.discovery.DiscoveryService"/>
    <property name="webserver_ip" value="" ></property>
    <service>
        <provide interface="org.eclipse.smarthome.config.discovery.DiscoveryService"/>
        <provide interface="org.eclipse.smarthome.core.events.EventSubscriber"/>
    </service>
        
    <reference bind="addThingRegistry" cardinality="1..1" interface="org.eclipse.smarthome.core.thing.ThingRegistry" name="ThingRegistry" policy="static" unbind="removeThingRegistry"/>
    <reference bind="addItemRegistry" cardinality="1..1" interface="org.eclipse.smarthome.core.items.ItemRegistry" name="ItemRegistry" policy="static" unbind="removeItemRegistry"/>      
    
    
</scr:component>
